@using CORE.DAL;
@{
    ViewData["Title"] = "Product";
}
@model ProductModel
<form method="post" asp-controller="Product" asp-action="Add">
    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input asp-for="Name" type="text" class="form-control" name="Name" id="Name">
    </div>
    <div class="mb-3">
        <label for="Price" class="form-label">Price</label>
        <input asp-for="Price" class="form-control" type="number" nam="Price" id="Price">
    </div>
    <div class="form-group">

        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control js-example-basic-single" asp-items="ViewBag.Category">
        </select>
        <span asp-validation-for="CategoryId" class="validation"></span>
    </div>
    <button type="submit" class="btn d-block mx-auto w-25 btn-primary">Add</button>
</form>