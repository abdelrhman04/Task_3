@using CORE.DAL;
@{
    ViewData["Title"] = "Category";
}
<div class="container mt-5">
    <table class="table table-hover">
        <thead class="">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
               
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Category in (List<Categories>)ViewBag.Category)
                {
            <tr>
                <th scope="row">@Category.Id</th>
                <td>@Category.Name</td>
                    <td><a class="btn btn-danger " asp-controller="Category" asp-action="Delete" asp-route-id="@Category.Id">Delete</a></td>
            </tr>
            }
        </tbody>
    </table>
</div>